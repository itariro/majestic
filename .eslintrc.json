{
    "root": true,
    "env": {
        "node": true,
		"browser":true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
    	"plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "js": true
        },
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react",
		"react-hooks"
    ],
    "rules": {
		"indent": [
            "error",
            "tab"
        ],
		"react/react-in-jsx-scope": "off",
		"react/prop-types": "off",
		"no-undef": "off"
    }
}
